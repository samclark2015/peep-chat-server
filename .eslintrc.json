{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": [
			"eslint:recommended",
			"plugin:require-path-exists/recommended"
		],
		"plugins": [
			"require-path-exists"
		],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
				"no-console": "warn",
				"no-unused-vars": "warn"
    }
}
